<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/title_layout" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:background="@color/white"
        android:orientation="vertical"
        android:paddingHorizontal="15dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:text="发票类型"
            android:textColor="@color/color_282828"
            android:textSize="@dimen/sp_14"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvReceiptType"
            android:layout_width="wrap_content"
            android:layout_height="28dp"
            android:layout_marginVertical="@dimen/dp_10"
            android:background="@drawable/shape_stroke_f4f4f4_solid_ff4f4f_radius_20"
            android:gravity="center"
            android:paddingHorizontal="@dimen/dp_10"
            android:text="电子普通发票"
            android:textColor="@color/btn_color"
            android:textSize="@dimen/sp_12" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="发票抬头"
            android:textColor="@color/color_282828"
            android:textSize="@dimen/sp_14"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvUnit"
            android:layout_width="wrap_content"
            android:layout_height="28dp"
            android:layout_marginVertical="@dimen/dp_10"
            android:background="@drawable/shape_stroke_f4f4f4_solid_ff4f4f_radius_20"
            android:gravity="center"
            android:paddingHorizontal="@dimen/dp_10"
            android:text="单位"
            android:textColor="@color/btn_color"
            android:textSize="@dimen/sp_12" />

        <TextView
            android:id="@+id/tvUnitName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="单位名称：河南亿生信科技有限公司"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/font_13sp" />

        <TextView
            android:id="@+id/tvNsNum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="@dimen/dp_10"
            android:text="纳税人识别号：521488963356"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/font_13sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="收票人信息"
            android:textColor="@color/color_282828"
            android:textSize="@dimen/sp_14"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvPhone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="@dimen/dp_10"
            android:text="收票人手机*：15896523684"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/font_13sp" />


        <TextView
            android:id="@+id/tvEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_10"
            android:text="收票人邮箱：5512563385@qq.com"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/font_13sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="发票内容"
            android:textColor="@color/color_282828"
            android:textSize="@dimen/sp_14"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/tvReceiptContent"
            android:layout_width="wrap_content"
            android:layout_height="28dp"
            android:layout_marginVertical="@dimen/dp_10"
            android:background="@drawable/shape_stroke_f4f4f4_solid_ff4f4f_radius_20"
            android:gravity="center"
            android:paddingHorizontal="@dimen/dp_10"
            android:text="商品明细"
            android:textColor="@color/btn_color"
            android:textSize="@dimen/sp_12" />
    </LinearLayout>


</LinearLayout>