<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="15dp"
                android:layout_marginVertical="@dimen/dp_10"
                android:layout_weight="1"
                android:text="发票"
                android:textColor="@color/color_282828"
                android:textSize="@dimen/sp_16"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/ivClose"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="15dp"
                android:layout_marginVertical="@dimen/dp_10"
                android:src="@mipmap/img_close" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:text="发票类型"
            android:textColor="@color/color_282828"
            android:textSize="@dimen/sp_14"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvReceiptType"
            android:layout_width="wrap_content"
            android:layout_height="28dp"
            android:layout_marginVertical="@dimen/dp_10"
            android:layout_marginLeft="15dp"
            android:background="@drawable/shape_stroke_f4f4f4_solid_ff4f4f_radius_20"
            android:gravity="center"
            android:paddingHorizontal="@dimen/dp_10"
            android:text="电子普通发票"
            android:textColor="@color/btn_color"
            android:textSize="@dimen/sp_12" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:text="发票抬头"
            android:textColor="@color/color_282828"
            android:textSize="@dimen/sp_14"
            android:textStyle="bold" />

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="@dimen/dp_10"
            android:layout_marginLeft="15dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv1"
                android:layout_width="wrap_content"
                android:layout_height="28dp"
                android:background="@drawable/bg_drawable_selector"
                android:gravity="center"
                android:paddingHorizontal="20dp"
                android:text="个人"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/sp_12" />


            <TextView
                android:id="@+id/tv2"
                android:layout_width="wrap_content"
                android:layout_height="28dp"
                android:layout_marginLeft="20dp"
                android:background="@drawable/bg_drawable_selector"
                android:gravity="center"
                android:paddingHorizontal="20dp"
                android:text="单位"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/sp_12" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/LL1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="15dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="单位名称：        "
                android:textColor="@color/color_333333"
                android:textSize="@dimen/font_13sp" />

            <EditText
                android:id="@+id/etUnitName"
                style="@style/edittext_style"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="请填写单位名称"
                android:singleLine="true"
                android:textColor="@color/color_282828"
                android:textColorHint="@color/color_cccccc"
                android:textSize="@dimen/font_13sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/LL2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="15dp"
            android:layout_marginVertical="@dimen/dp_10"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="纳税人识别号："
                android:textColor="@color/color_333333"
                android:textSize="@dimen/font_13sp" />

            <EditText
                android:id="@+id/etNSNum"
                style="@style/edittext_style"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="请填写纳税人识别号"
                android:singleLine="true"
                android:textColor="@color/color_282828"
                android:textColorHint="@color/color_cccccc"
                android:textSize="@dimen/font_13sp" />

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="@dimen/dp_10"
            android:layout_marginLeft="15dp"
            android:text="收票人信息"
            android:textColor="@color/color_282828"
            android:textSize="@dimen/sp_14"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="15dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="收票人手机*："
                android:textColor="@color/color_333333"
                android:textSize="@dimen/font_13sp" />

            <EditText
                android:id="@+id/etPhone"
                style="@style/edittext_style"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="请填写收票人手机号码"
                android:inputType="number"
                android:maxLength="11"
                android:singleLine="true"
                android:textColor="@color/color_282828"
                android:textColorHint="@color/color_cccccc"
                android:textSize="@dimen/font_13sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="15dp"
            android:layout_marginVertical="@dimen/dp_10"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="收票人邮箱  ："
                android:textColor="@color/color_333333"
                android:textSize="@dimen/font_13sp" />

            <EditText
                android:id="@+id/etEmail"
                style="@style/edittext_style"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="请填写收票人邮箱"
                android:singleLine="true"
                android:textColor="@color/color_282828"
                android:textColorHint="@color/color_cccccc"
                android:textSize="@dimen/font_13sp" />

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:text="发票内容"
            android:textColor="@color/color_282828"
            android:textSize="@dimen/sp_14"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="@dimen/dp_10"
            android:layout_marginLeft="15dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv3"
                android:layout_width="wrap_content"
                android:layout_height="28dp"
                android:background="@drawable/bg_drawable_selector"
                android:gravity="center"
                android:paddingHorizontal="20dp"
                android:text="商品明细"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/sp_12" />


            <TextView
                android:id="@+id/tv4"
                android:layout_width="wrap_content"
                android:layout_height="28dp"
                android:layout_marginLeft="20dp"
                android:background="@drawable/bg_drawable_selector"
                android:gravity="center"
                android:paddingHorizontal="20dp"
                android:text="商品类别"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/sp_12" />

        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/tv_ok"
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:layout_marginTop="30dp"
        android:background="@color/btn_color"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:text="确定"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_16" />
</RelativeLayout>